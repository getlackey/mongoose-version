{
  "env": {
    "es6": true,
    "mocha": true,
    "node": true
  },
  "extends": [
    "standard",
    "eslint:recommended",
    "plugin:mocha/recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 9,
    "sourceType": "module"
  },
  "plugins": [
    "babel",
    "mocha",
    "standard"
  ],
  "root": true,
  "rules": {
    "arrow-parens": [
      2,
      "as-needed"
    ],
    "comma-dangle": [
      2,
      "always-multiline"
    ],
    "import/newline-after-import": [
      "error",
      {
        "count": 2
      }
    ],
    "mocha/no-exclusive-tests": "error",
    "mocha/no-hooks-for-single-case": "off",
    "no-console": "warn",
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 2,
        "maxEOF": 1
      }
    ],
    "object-curly-spacing": [
      2,
      "never"
    ],
    "quotes": [
      2,
      "double"
    ],
    "semi": [
      2,
      "always"
    ],
    "space-before-function-paren": [
      "error",
      "never"
    ]
  }
}
